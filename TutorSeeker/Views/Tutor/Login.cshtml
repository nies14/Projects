@model TutorSeekerEntity.Seeker

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<div>

    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <h1 id="logo">
                    <center><a href="/home"><img src="~/Contents/img/logoTutor.png" /></a></center>
                </h1>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please sign in</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label style="color:red;">@ViewBag.errorMessage</label>
                                    <input class="form-control" placeholder="E-mail" name="email" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                                    </label>
                                </div>
                                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
                            </fieldset>
                        </form>
                        <div class="panel-body">
                            <center><a href="/tutor/create">Create a account</a></center>
                        </div>
                        <hr class="subheaderHr" />
                        <center><span style="font-size:15px;"><a href="@Url.Action("index", "Home")">Back To Home</a></span></center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles{
    <link href="~/Contents/myStyle.css" rel="stylesheet" />
}

@section scripts{
    <script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
    <script src="myscript.js"></script>
}
