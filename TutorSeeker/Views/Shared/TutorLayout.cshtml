<!DOCTYPE html>
<html>
<head>
    <title>@RenderSection("title", false)</title>

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", false)

    <link href="~/Contents/bootstrap.css" rel="stylesheet" />
    <link href="~/Contents/LogoutStyleSheet.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Contents/footer.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home" style="font-size:25px; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> Tutor Seeker</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/Tutor/Details/@Session["Tutorid"]">Profile</a></li>
                <li class="active"><a href="/Tutor/Edit/@Session["Tutorid"]">Edit Profile</a></li>
                <li class="active"><a href="/Tutor/PostAdd/@Session["Tutorid"]">Post Advertisement</a></li>
                <li class="active"><a href="/Tutor/ShowAdd/@Session["Tutorid"]">Show All Advertisement</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="glyphicon glyphicon-user"></i> @RenderSection("username", false)
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Tutor/Details/@Session["Tutorid"]"><i class="glyphicon glyphicon-user"></i> My Profile</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="~//Home/index"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                        <li role="separator" class="divider"></li>
                        <a href="@Url.Action("Logout", "Tutor")" class="glyphicon glyphicon-log-out" id="mnuLogout">Logout</a>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    @Html.Partial("FooterLayout")
</body>
</html>